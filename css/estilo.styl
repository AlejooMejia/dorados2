azul=#3498db;
blanco=#ecf0f1;
plata=#ecf0f1;
azulOscuro=#2c3e50;

@font-face {
	font-family: 'icomoon';
	src:url('fonts/icomoon.eot?v7eyuo');
	src:url('fonts/icomoon.eot?#iefixv7eyuo') format('embedded-opentype'),
		url('fonts/icomoon.woff?v7eyuo') format('woff'),
		url('fonts/icomoon.ttf?v7eyuo') format('truetype'),
		url('fonts/icomoon.svg?v7eyuo#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}


body
	background blanco
	font-size 16px
header
	background azul
	div.menu
		width 11%
		display inline-block
		text-align center
		
		p
			margin 11px 0
			&:after
				font-family icomoon
				content "\e9bd"
				color #fff
				font-size 24px
			
	h1
		width 72%
		margin 0
		display inline-block
		font-size 1.2em
		text-align center
		color #fff
		text-shadow 1px 1px 2px azulOscuro
		
		
	figure
		width 49px
		margin 0
		display inline-block
		background #fff
		float right
		img
			width 100%
	nav
		display none
		background azulOscuro
		ul
			list-style none
			margin 0
			padding 0
			li
				border-bottom 1px solid #7f8c8d
				padding .8em .5em
		
				
				a
					color #fff
					text-decoration none
					font-weight bold
				span
					width 200px
					padding .6em 
					background #fff
					border-radius 50%
					margin-right 10%
					
				span.inicio,span.licenciatura, span.sistAbierto,span.maestria,span.doctorado,span.instalaciones,span.conocenos,span.plataforma,span.revista,span.radio,span.promociones
					color azul
					font-family icomoon
				span.inicio:after
					content "\e900"
				span.licenciatura:after
					content "\e604"
				span.sistAbierto:after
					content "\e91f"
				span.maestria:after
					content "\e920"
				span.doctorado:after
					content "\e921"
				span.instalaciones:after
					content "\e903"
				span.conocenos:after
					content "\e948"
				span.plataforma:after
					content "\e972"
				span.revista:after
					content "\e602"
				span.radio:after
					content "\e910"
				span.promociones:after
					content "\e99f"
		
		ul.subMenuLicenciatura,ul.subMenuAbierto,ul.subMenuMaestrias,ul.subMenuDoctorado,ul.subMenuPlataforma
			li
				div.bolita
					width 30px
					height 30px
					background #fff
					border-radius 50%
					position relative
					display inline-block
					margin-left 20%
				
				p.gastro,p.turismo,p.derecho,p.grafico,p.educacion,p.comunicacion,p.merca,p.conta,p.sistemas,p.tics,p.informatica,p.empresas,p.usuario,p.contra
					font-family icomoon
					position absolute
					top -10px
					left 7px
					color azul
				p.gastro:after
					content "\e9a0"
				p.turismo:after
					content "\e9ae"
				p.derecho:after
					content "\e9a8"
				p.grafico:after
					content "\e906"
				p.educacion:after
					content "\e91f"
				p.comunicacion:after
					content "\e91e"
				p.merca:after
					content "\e99b"
				p.conta:after
					content "\e93b"
				p.sistemas:after
					content "\e956"
				p.tics:after
					content "\e920"
				p.informatica:after
					content "\e601"
				p.empresas:after
					content "\e976"
				p.usuario:after
					content "\e972"
				p.contra:after
					content "\e600"
				a
					width 67%
					display inline-block
					vertical-align top
					margin-top 5px
					text-align left
				input
					width 60%
					display inline-block
					vertical-align top
					text-align left
					border none
					padding .3em
					border-radius 10px
				button
					width 60%
					border none
					background azul
					color blanco
					font-weight bold
					text-align center
					padding .5em
					margin 0 20%
					
		ul.subMenuLicenciatura, ul.subMenuAbierto, ul.subMenuMaestrias,ul.subMenuDoctorado,ul.subMenuPlataforma
			display none

section.mision
	background url(../img/escuela.JPG)
	background-size 100% 100%
	text-align center
	color #fff
	padding 5% 1%
	article.vision
		display none
	article.textoMision
		h2
			margin 0 auto
			width 40%
			padding .5% 0%
			text-align center
			opacity .9
			margin-bottom 3%
			text-shadow 2px 2px 2px #000
		p
			width 90%
			margin 0 5%
			text-shadow 1px 1px 2px black
			padding-bottom 3%
			font-style italic
			text-align justify
			color #FFF
section.carreras
	background #2c3e50
	position relative
	h2
		text-align center
		color #fff
		padding 3% 0
		margin 0
		
section.carreras:after
	content ""
	position absolute
	border-top 10px solid #2c3e50
	border-left 10px solid transparent
	border-right 10px solid transparent
	border-bottom 10px solid transparent
	bottom -20px
	left 45.5%
section.licenciaturas
	article
		width 140px
		height 92px
		background black
		position relative
		margin 15% 2% 0 2% 
		display inline-block
		padding 0
		text-align center
		color #fff
		vertical-align top
		p,h4
			margin 1% 0
		div.bolita
			width 30px
			height 30px
			background #fff
			border-radius 50%
			position relative
			display inline-block
			margin 0% auto
				
			p.gastro,p.turismo,p.derecho,p.grafico,p.educacion,p.comunicacion,p.merca,p.conta,p.sistemas,p.tics,p.informatica,p.empresas,p.usuario,p.contra
				font-family icomoon
				position absolute
				top 5px
				left 7px
				color azul
			p.gastro:after
				content "\e9a0"
			p.turismo:after
				content "\e9ae"
			p.derecho:after
				content "\e9a8"
			p.grafico:after
				content "\e906"
			p.educacion:after
				content "\e91f"
			p.comunicacion:after
				content "\e91e"
			p.merca:after
				content "\e99b"
			p.conta:after
				content "\e93b"
			p.sistemas:after
				content "\e956"
	article:after
		content: "";
		position: absolute;
		bottom: -30px;
		left: 0;
		width: 0;
		height: 0;
		border-left: 70px solid transparent;
		border-right: 70px solid transparent;
		border-top: 30px solid black;
	article:before
		content: "";
		position: absolute;
		top: -30px;
		left: 0;
		width: 0;
		height: 0;
		border-left: 70px solid transparent;
		border-right: 70px solid transparent;
		border-bottom: 30px solid black;
	article.ld,article.laym,article.lc
		margin 12% 27%
	article.ldg,article.lce,article.lcyf,article.isc
		margin-top 0


